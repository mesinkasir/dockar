{% for info in intro %}      
<div class="col-md-4 p-3">
<div class="p-1 bg-body-tertiary rounded card">
<img class="img-icon img-fluid" alt="{{info.title}}" width="100%" height="100%" 
src="{{info.image}}"/>
<div class="p-3">
<h3><strong><a href="{{metadata.url}}">{{info.title}}</a></strong></h3>
<p class="mt-3">{{info.content}}</p>
</div>
</div>
</div>
{% endfor %}
