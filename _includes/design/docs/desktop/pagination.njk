{%- if collections.docs %}
{%- set previousPost = collections.docs | getPreviousCollectionItem %}
{%- set nextPost = collections.docs | getNextCollectionItem %}
{%- if nextPost or previousPost | reverse  %}
<div class="row mt-3">
<div class="col-md-6">
{%- if previousPost %}
<div class="p-3 rounded text-body-emphasis bg-body-tertiary card">
<a href="{{ previousPost.url }}" class="text-body-emphasis "><p class="small"><i class="bi bi-arrow-left-short"></i> Previous</p>
<h3 class="pag-title">{{ previousPost.data.title }}</h3></a>
</div>
{%- endif %}
</div>
<div class="col-md-6 text-end">
{%- if nextPost %}
<div class="p-3 rounded text-body-emphasis bg-body-tertiary card">
<a href="{{ nextPost.url }}" class="text-body-emphasis "><p class="small">Next <i class="bi bi-arrow-right-short"></i></p>
<h3 class="pag-title">{{ nextPost.data.title }}</h3></a>
</div>
{%- endif %}
</div>
</div>
{%- endif %}
{%- endif %}
